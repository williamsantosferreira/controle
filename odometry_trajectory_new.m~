%Odometria robÃ´
close all;
clear;
clc;
%% Variables
x(1) = 0;
y(1) = 0;
theta(1) = 0;
v = 0;
w = 0;
L = 0.42;

Kp_v = 5;
Ki_v = 1;
Kd_v = 0;
ev_sum = 0;
ev_max = 100;

Kp_w = 5;
Ki_w = 0;
Kd_w = 0;
ew_sum = 0;

dt = 0.01;
tol = 0.1;

v_max = 1;
w_max = 1;

[xref,yref,thetaref,vref,wref] = path_reta();
%[xref,yref,thetaref,vref,wref] = path_square()
%[xr yr] = path_circle();
%[xr yr] = path_oito();

%% Control
for i=2:length(xref)
   theta(i) = theta(i-1) + w*dt;
   x(i) = x(i-1) + v*cos(theta(i))*dt;
   y(i) = y(i-1) + v*sin(theta(i))*dt;
    
   ex = xref(i) - x(i);
   ey = yref(i) - y(i);
   
   thetar = atan2(ey,ex);
   et = thetar - theta(i);
   
   ev_sum = ev_sum + ex*cos(et);
   if(ev_sum > ev_max)
       ev_sum = -ev_max;
   elseif(ev_sum < -ev
   
   v = vref(i) + Kp_v*ex*cos(et) + Ki_v*ev_sum;
   w = wref(i) + Kp_w*et;
   
   if(abs(v) > v_max)
       v = sign(v)*v_max;
   end
   if(abs(w) > w_max)
       w = sign(w)*w_max;
   end
   
end
plot(xref,yref,x,y);